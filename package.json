{
  "name": "kirby3-commentions",
  "version": "1.0.7",
  "description": "A versatile comment system and integrated Webmention endpoint for Kirby 3.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastiangreger/kirby3-commentions.git"
  },
  "scripts": {
    "dev": "npx -y kirbyup src/index.js --watch",
    "build": "npx -y kirbyup src/index.js"
  },
  "posthtml": {
    "recognizeSelfClosing": true
  },
  "author": "Sebastian Greger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sebastiangreger/kirby3-commentions/issues"
  },
  "homepage": "https://github.com/sebastiangreger/kirby3-commentions#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/component-compiler-utils": "^3.2.0",
    "cssnano": "^4.1.10",
    "sass": "^1.28.0",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {
    "regenerator-runtime": "^0.13.7",
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-default-prop": "off",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  }
}
